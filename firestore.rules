rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Quizzes - читать могут все, писать только авторизованные
    match /quizzes/{quizId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Votes - читать и писать могут только авторизованные
    match /quizVotes/{voteId} {
      allow read, write: if request.auth != null;
    }
    
    // Users - читать могут все, писать только свой профиль
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Quiz Results - читать могут все, писать только авторизованные
    match /quizResults/{resultId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}